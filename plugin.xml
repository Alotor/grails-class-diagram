<plugin name='class-diagram' version='0.4' grailsVersion='1.1.1 &gt; *'>
  <author>Trygve Amundsen</author>
  <authorEmail>trygve.amundsen at gmail.com</authorEmail>
  <title>Creates a class diagram from grails domain classes</title>
  <description>\
Provides a class diagram of all the domain classes with their properties, methods, 
associations and inheritance to other domain classes. 
The excellent utility graphviz (http://www.graphviz.org/) is used for diagram layout.
</description>
  <documentation>http://grails.org/plugin/class-diagram</documentation>
  <resources>
    <resource>ClassDiagramLegendService</resource>
    <resource>ClassDiagramService</resource>
    <resource>ClassDiagramConfig</resource>
    <resource>UrlMappings</resource>
    <resource>Config</resource>
    <resource>ClassDiagramController</resource>
    <resource>test.subpackage.SimpleClass1</resource>
    <resource>test.subpackage.SimpleClass2</resource>
    <resource>test.AbstractParent</resource>
    <resource>test.MoreFooBar</resource>
    <resource>test.FooBar</resource>
    <resource>test.Child</resource>
    <resource>test.Foo</resource>
    <resource>test.Bar</resource>
    <resource>test.Many</resource>
    <resource>test.Parent</resource>
    <resource>RootPackagedClass</resource>
  </resources>
  <dependencies />
</plugin>